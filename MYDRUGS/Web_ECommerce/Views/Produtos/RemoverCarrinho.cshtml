@model Entities.Entities.Produto

@{
    ViewData["Title"] = "Remover da Sacola";
}
    <link rel="stylesheet" href="~/css/site.css" />

    <div class="row d-flex justify-content-center">
        <div class="bg-white p-4">
            <h4 class="mb-5">Você está prestes a remover o produto "@Html.DisplayFor(model => model.Nome)" da sacola</h4>
            <dl class="row gy-3">

                <dt class="col-sm-2 text-start text-sm-end">
                    @Html.DisplayNameFor(model => model.Nome)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Nome)
                </dd>
                <dt class="col-sm-2 text-start text-sm-end">
                    @Html.DisplayNameFor(model => model.Descricao)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Descricao)
                </dd>
                <dt class="col-sm-2 text-start text-sm-end">
                    @Html.DisplayNameFor(model => model.Observacao)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Observacao)
                </dd>
                <dt class="col-sm-2 text-start text-sm-end">
                    @Html.DisplayNameFor(model => model.Valor)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Valor)
                </dd>
                <dt class="col-sm-2 text-start text-sm-end">
                    @Html.DisplayNameFor(model => model.QtdCompra)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.QtdCompra)
                </dd>
            </dl>

            <form class="text-end" asp-action="RemoverCarrinho">
                <a class="btn btn-outline-primary" asp-action="ListarProdutosCarrinhoUsuario">Voltar para o carrinho</a>
                <input type="submit" value="Remover" class="btn btn-danger" />
            </form>
        </div>
    </div>